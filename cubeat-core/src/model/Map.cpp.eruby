int <% debug_hook 'Map::column_full_num' do %>() const{
<% end %>
    int counter = 0;
    for( int x=0, width = ms()->width(), y = ms()->height()-2; x < width; ++x ){
        if( cubes_[x][y] && cubes_[x][y]->is_waiting() ){
