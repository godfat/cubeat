        dropping_creatable_ = false;
        if( !c->is_garbage() && !c->is_broken() ) garbage_dumpable_ = false;
    }
    if( c->cycle_and_die(now_t_, last_t_) ) {
        cubes_[x][y].reset();
        owner_.lock()->release(c);
    }
}

// rotation table: the rotation code of each edge permutation encoding value.
static int rottable_[16] = { 0, 3, 2, 2, 1, 1, 1, 1, 0, 3, 0, 2, 0, 3, 0, 0 };

int Map::encode_dying_metadata(cpCube c)
{
    int dir[4][2] = {{0, 1}, {1, 0}, {0, -1}, {-1, 0}}; // clockwise
    int connected_side_bit = 0;
    int connected_side_sum = 0;
    for( int i = 0; i < 4; ++i ) {
        connected_side_bit <<= 1; // first direction (up) will become most-significant-digit
        int ix = c->x() + dir[i][0];
        int iy = c->y() + dir[i][1];
        if( ix < ms()->width() && ix >= 0 && iy < ms()->height() - 1 && iy >= 0 ) {
            if( cubes_[ix][iy] && cubes_[ix][iy]->is_dying() &&
                cubes_[ix][iy]->chain() == c->chain() && cubes_[ix][iy]->dying_chain_step() == c->dying_chain_step() ) {
                connected_side_bit |= 1;
                connected_side_sum += 1;
            }
        }
    }

    int type = connected_side_sum;
    if( connected_side_bit == 5 || connected_side_bit == 10 ) { type = 5; }
    return (one_fadings_per_cycle_ * 1000) +
           (c->color_id() * 100) +
           (type * 10) +
           rottable_[connected_side_bit];
}

void Map::check_a_fade(pCube c, int x, int y, pChain existing_chain)
{
    using std::tr1::make_tuple;

    if( state::pWaiting waiting = c->is_waiting() ){
        if( waiting->need_check() )
        {
            c->set_grounded(); // once grounded, always grounded

            if( c->is_broken() ) {
                waiting->checked();
                return;
            } // if the current cube is broken, bail out here, don't bother do one_fading check

            pOneFadingOrig one_fading = make_OneFading(c);

            if( one_fading ){
                one_fading->fade(*this, existing_chain);

                // The first phase of chain tagging: If there are other OneFadings in the same frame,
                // look it up and tag it. It will only affect other successfully constructed OneFadings.
                // And since waiting will become checked, there will be no duplicated efforts.
                printf("\n");
                for( cube_list_type::iterator i = one_fading->begin(), iend = one_fading->end();
                     i != iend; ++i )
                {
                    for( int x = (**i).x(), y = (**i).y() + 1; y < ms()->height() - 1; ++y ) {
                        if( cubes_[x][y] ) {
                            check_a_fade(cubes_[x][y], x, y, one_fading->chain());
                        }
                    }
                }
                // note: have to re-iterate again, not in the same loop as above, to make sure all possible cubes
                //       are called go_dying() before we start counting edges.

                // note: and this line has to be here -- because check_a_fade is actually a recursive call
                //       if you just add one_fadings_per_cycle_ in a pre-fix way, then we are going to get only the biggest gid.
                one_fadings_per_cycle_ += 1;

                for( cube_list_type::iterator i = one_fading->begin(), iend = one_fading->end();
                     i != iend; ++i ) {
                    // remember the dying_cubes_position according to chain for later use (visual)
                    dying_cubes_position_[ std::make_pair(one_fading->wchain(), c->dying_chain_step()) ]
                        .push_back( make_tuple((**i).x(), (**i).y(), encode_dying_metadata((*i))) );
                }
            }
            else waiting->checked();
        }
    }
}

